# A6_9V Domain Controller Environment Variables Template
# Copy this file to .env and update with your values

# Domain Controller Configuration
DOMAIN_ROOT=E:\DomainController
TEAM=A6_9V
ADMIN_EMAIL=your-email@example.com
SECURITY_LEVEL=MAXIMUM

# Trading Systems Configuration
MT5_ACCOUNT=your_account_number
MT5_PASSWORD=your_password
MT5_SERVER=your_broker_server
MT5_ACCOUNT_NAME=your_account_name
MT5_BALANCE=0.00

# Encryption Key (REQUIRED - Generate a secure random key)
ENCRYPTION_KEY=generate_a_secure_random_key_here

# Service Ports (adjust if ports conflict)
MASTER_CONTROL_PORT=8080
TRADING_SYSTEMS_PORT=8081
SECURE_VAULT_PORT=8082
REMOTE_CONTROL_PORT=8083
PROJECT_AUTOMATION_PORT=8084
CLOUD_MANAGER_PORT=8085
DOMAIN_MANAGER_PORT=8086
BROWSER_VPN_PORT=8087
MONITORING_PORT=9090
CLOUD_PLATFORM_PORT=3001

# Cloud Platform Configuration
NODE_ENV=development
ORGANIZATION=A6-9V
DOMAIN=your-domain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=E:\DomainController\Logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIR=E:\DomainController\Backups
